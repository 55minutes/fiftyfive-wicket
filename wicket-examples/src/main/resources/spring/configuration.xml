<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <!--
  - 1. Load default configuration values from settings-default.properties
  -    in the classpath (see src/main/resources).
  -
  - 2. Override those defaults by loading enviroment-specific properties.
  -    The properties file must be specified in a system property called
  -    "settings". Use a -Dsettings= command line argument when running
  -    the application.
  -->
  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="ignoreUnresolvablePlaceholders" value="false"/>
    <property name="ignoreResourceNotFound" value="true"/>
    <property name="locations">
      <list>
        <value>classpath:settings-default.properties</value>
        <value>${settings}</value>
      </list>
    </property>
  </bean>

</beans>
